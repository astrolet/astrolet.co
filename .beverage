{
  "scripts": {
    "include": {
      "bsync": "browser-sync, depends on the serve task"
    }
  },
  "build": "style",
  "buildWatch": ["compass.rb", "styles/**/*.sass"],
  "harp": {
    "name": "serve",
    "help": "harp-serve src & browser-sync",
    "path": "src",
    "port": 9000,
    "sync": {
      "options": {
        "open": false,
        "notify": {
          "styles": ["opacity: 0"]
        }
      },
      "reload": ["**/*"],
      "stream": ["**/*.css"]
    }
  },
  "sourcegate": [
    {"recipe": "coffeelint", "preset": "coffeescript-style-guide"}
  ]
}
