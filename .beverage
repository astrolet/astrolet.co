{
  "scripts": {
    "include": {
      "build": "compass styles and harp compile"
    }
  },
  "causality": ["style", ["compass.rb", "styles/**/*.sass"]],
  "harp": {
    "name": "serve",
    "help": "Harp-serve src & browser-sync",
    "path": "src",
    "sync": {
      "reload": ["src/**/*"],
      "stream": ["src/**/*.css"]
    }
  },
  "sourcegate": [
    {"recipe": "coffeelint", "preset": "coffeescript-style-guide"}
  ]
}
